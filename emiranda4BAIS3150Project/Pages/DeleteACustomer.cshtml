@page
@model emiranda4BAIS3150Project.Pages.DeleteACustomerModel
@{
    ViewData["Title"] = "Delete a Customer - emiranda4 BAIS3150 Project";
}
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
<h1 class="display-4">Delete a Customer</h1>
<hr class="my-4">
<div>
    <h4 class="alert-success">@Model.FormMessage</h4>
    <form method="post">
        <div class="form-group row align-items-end">
            <div class="col-2">
                <label asp-for="CustomerId" class="form-label">Customer ID</label>
                <input type="text" asp-for="CustomerId" placeholder="ex. 15" class="form-control">
            </div>
            <div class="col-auto">
                <span asp-validation-for="CustomerId" class="alert-danger"></span>
                <br />
                <span class="alert-danger">@Model.ErrorMessage</span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <button asp-page-handler="Search" class="btn btn-primary">Search</button>
                <button asp-page-handler="Remove" class="btn btn-danger" disabled="@Model.Disable" onclick="return confirm('Are you sure you want to delete this?')">Delete</button>
                <button asp-page-handler="Clear" class="btn btn-warning">Clear</button>
            </div>
        </div>
    </form>
</div>
@if (Model.ExistingCustomer != null && !Model.Disable)
{
    <br />
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <caption>Customer Information</caption>
            <thead>
                <tr>
                    <th scope="col">Customer ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">City</th>
                    <th scope="col">Province</th>
                    <th scope="col">PostalCode</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.ExistingCustomer.CustomerId</td>
                    <td>@Model.ExistingCustomer.CustomerFirstName</td>
                    <td>@Model.ExistingCustomer.CustomerLastName</td>
                    <td>@Model.ExistingCustomer.Address</td>
                    <td>@Model.ExistingCustomer.City</td>
                    <td>@Model.ExistingCustomer.Province</td>
                    <td>@Model.ExistingCustomer.PostalCode</td>
                </tr>
            </tbody>
        </table>
    </div>
}